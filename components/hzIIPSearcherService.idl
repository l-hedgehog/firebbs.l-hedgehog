#include "nsISupports.idl"

/**
 * Find the address of the given ip in QQwry.dat
 */
 
[scriptable, uuid(5665b472-3c7a-4ef7-ab12-a8de8a5a3338)]
interface hzIIPSearcherService : nsISupports
{

    /**
     * Init the hzIPSearcher service
     *
     * Read data from QQwry.dat, get the start position of the index.
     * An exception will be thrown if QQwry.dat cannot be found.
     */
    void init();

    /**
     * Find the address of the given ip.
     *
     * @param aIP - The ip to lookup in QQwry.dat.
     */
    AString location(in ACString aIP);

};
